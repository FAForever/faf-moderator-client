<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="cellContainer" maxHeight="Infinity" maxWidth="Infinity" minHeight="100.0" minWidth="-Infinity" prefHeight="100.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints maxHeight="74.0" minHeight="12.0" prefHeight="43.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="86.0" minHeight="0.0" prefHeight="60.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="71.0" minHeight="13.0" prefHeight="40.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <ImageView fx:id="previewImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="3" />
      <Label fx:id="mapParamsLabel" text="Map Params" wrapText="true" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="2" />
      <Label fx:id="mapNameLabel" text="Map Name" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0" />
      <HBox GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
         <Label text="Version: " />
         <Label fx:id="mapVersionLabel" text="Map Version" />
      </HBox>
      <Label fx:id="mapSizeLabel" text="Map Size" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
      <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3">
         <Label text="Weight" HBox.hgrow="ALWAYS" />
         <Label fx:id="weightLabel" text="#" HBox.hgrow="ALWAYS" />
         <Button fx:id="weightDownButton" mnemonicParsing="false" text="-" HBox.hgrow="ALWAYS" />
         <Button fx:id="weightUpButton" mnemonicParsing="false" text="+" HBox.hgrow="ALWAYS" />
      </HBox>
   </children>
</GridPane>
