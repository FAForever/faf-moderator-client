<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faforever.moderatorclient.ui.GroupAddChildController">
    <children>
        <Label text="Affected Group"/>
        <TextField fx:id="affectedGroupTextField" disable="true" editable="false" />
        <Label text="Children To Add"/>
        <ListView fx:id="groupChildrenListView" prefHeight="200.0" prefWidth="200.0"/>

        <HBox alignment="BOTTOM_RIGHT">
            <children>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onSave" text="Add Group" />
                <Button cancelButton="true" mnemonicParsing="false" onAction="#onAbort" text="Cancel">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
